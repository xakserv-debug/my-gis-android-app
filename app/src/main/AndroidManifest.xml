<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Обязательные разрешения для работы приложения -->

    <!-- Разрешения на определение местоположения (точное и приблизительное) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- Разрешение для работы в фоновом режиме (для Android 10 и выше) -->
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <!-- Разрешение для работы foreground-сервиса -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- Разрешение для камеры -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- Разрешение для записи аудио -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!-- Разрешение на запись файлов (нужно для сохранения фото/аудио перед отправкой) -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" /> <!-- maxSdkVersion="28" т.к. на новых Android Scoped Storage -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MonitoringApp"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Объявление нашего фонового сервиса -->
        <service
            android:name=".MonitoringService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="location|camera|microphone" />

    </application>

</manifest>