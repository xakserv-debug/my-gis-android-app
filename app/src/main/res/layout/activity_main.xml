<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Мониторинг устройства"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Статус: Неактивен"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="16dp"
        android:background="#f0f0f0"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Запустить мониторинг"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:background="#4CAF50"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Остановить мониторинг"
        android:textSize="18sp"
        android:padding="16dp"
        android:background="#F44336"
        android:textColor="#FFFFFF"
        android:enabled="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Приложение будет работать в фоне и отправлять данные на сервер"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="#666666"
        android:layout_marginTop="32dp" />

</LinearLayout>